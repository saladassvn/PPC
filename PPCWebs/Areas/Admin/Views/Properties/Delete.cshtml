@model PPCWebs.Models.Property

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div>
    <form style=" padding-bottom: 100px;">
        <h2 style="padding-bottom: 20px;">Delete</h2>
        <h3>Are you sure you want to delete this?</h3><br />
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="Name">Name</label><br />
                @Html.DisplayFor(model => model.PropertyName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group col-md-6">
                <label for="inputEmail4">District</label><br />
                @Html.DisplayFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputAddress">Address</label><br />
                @Html.DisplayFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
            </div>

        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="Area">Area</label><br />
                @Html.DisplayFor(model => model.Area, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group col-md-4">
                <label for="Bed">Bed Room</label><br />
                @Html.DisplayFor(model => model.BedRoom, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group col-md-4">
                <label for="Bath">Bath Room</label><br />
                @Html.DisplayFor(model => model.BathRoom, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="Price">Price</label><br />
                @Html.DisplayFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group col-md-4">
                <label for="Rate">Installment Rate</label><br />
                @Html.DisplayFor(model => model.InstallmentRate, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group col-md-4">
                <label for="inputEmail4">Status</label><br />
                @Html.DisplayFor(model => model.PropertyStatusID, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col_01 col_len">
                <label for="Description">Mô tả</label><br />
                @Html.DisplayFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <dt>
            @Html.DisplayNameFor(model => model.Avatar)
        </dt>
        <br />
        <dd>
            <img src="@Url.Content(Model.Avatar)" alt="Image" style="height:250px;width:200px;" />
        </dd>
    </form>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
