@model PPCWebs.Models.Property

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<form style="padding: 0 200px; padding-bottom: 100px;">
    <h2 style="padding-bottom: 20px;">Detail Property</h2>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Name">Name</label>
            <input type="text" class="form-control" id="Name" value="@Html.DisplayFor(model => model.PropertyName)">
        </div>
        <div class="form-group col-md-6">
            <label for="inputEmail4">Property Type</label>
            <input type="text" class="form-control" id="inputType" value="@Html.DisplayFor(model => model.PropertyType.PropertyTypeName)">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputAddress">Address</label>
            <input type="text" class="form-control" id="inputAddress" value="@Html.DisplayFor(model => model.Address)">
        </div>
        <div class="form-group col-md-6">
            <label for="inputEmail4">District</label>
            <input type="text" class="form-control" id="inputDistrict" value="@Html.DisplayFor(model => model.District.DistrictName)">

        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="Area">Area</label>
            <input type="text" class="form-control" id="Area" value="@Html.DisplayFor(model => model.Area)">
        </div>
        <div class="form-group col-md-4">
            <label for="Bed">Bed Room</label>
            <input type="number" class="form-control" id="Bed" value="@Html.DisplayFor(model => model.BedRoom)">
        </div>
        <div class="form-group col-md-4">
            <label for="Bath">Bath Room</label>
            <input type="number" class="form-control" id="Bath" value="@Html.DisplayFor(model => model.BathRoom)">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="Price">Price</label>
            <input type="number" class="form-control" id="Price" value="@Html.DisplayFor(model => model.Price)">
        </div>
        <div class="form-group col-md-4">
            <label for="Rate">Installment Rate</label>
            <input type="number" class="form-control" id="Rate" value="@Html.DisplayFor(model => model.InstallmentRate)">
        </div>
        <div class="form-group col-md-4">
            <label for="inputEmail4">Status</label>
            <input type="text" class="form-control" id="inputStatus" value="@Html.DisplayFor(model => model.PropertyStatu.PropertyStatusName)">
        </div>
    </div>
    <div class="form-group">
        <div class="col_01 col_len">
            <label for="Description">Mô tả</label>
            <label required rows="2" cols="5" id="Description" name="mota" form="add_product" autocomplete="off" class="form-control">@Html.DisplayFor(model => model.Description)</label>
        </div>
    </div>
    <div class="form-group">
        <div class="col_01 ">
            <label class="text_label_01 mt_01">Avatar Property</label>

            <div class="image_aria " id="image_aria">
                <img width="700" src="@Html.DisplayFor(model => model.Avatar)" alt="image" style="padding: 20px 0;">

            </div>
        </div>
        <button type="Update" class="btn btn-primary">Update</button>

    </div>

</form>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

