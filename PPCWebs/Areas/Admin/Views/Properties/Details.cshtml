@model PPCWebs.Models.Property

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<form style="padding: 0 200px; padding-bottom: 100px;">
    <h2 style="padding-bottom: 20px;">Detail Property</h2>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Name">Name</label>
            <input type="text" class="form-control" id="Name" value="@Html.DisplayFor(model => model.PropertyName)" readonly>
        </div>
        <div class="form-group col-md-6">
            <label for="inputEmail4">Property Type</label>
            <input type="text" class="form-control" id="inputType" value="@Html.DisplayFor(model => model.PropertyType.PropertyTypeName)" readonly>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputAddress">Address</label>
            <input type="text" class="form-control" id="inputAddress" value="@Html.DisplayFor(model => model.Address)" readonly>
        </div>
        <div class="form-group col-md-6">
            <label for="inputEmail4">District</label>
            <input type="text" class="form-control" id="inputDistrict" value="@Html.DisplayFor(model => model.District.DistrictName)" readonly>

        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="Area">Area</label>
            <input type="text" class="form-control" id="Area" value="@Html.DisplayFor(model => model.Area)" readonly>
        </div>
        <div class="form-group col-md-4">
            <label for="Bed">Bed Room</label>
            <input type="number" class="form-control" id="Bed" value="@Html.DisplayFor(model => model.BedRoom)" readonly>
        </div>
        <div class="form-group col-md-4">
            <label for="Bath">Bath Room</label>
            <input type="number" class="form-control" id="Bath" value="@Html.DisplayFor(model => model.BathRoom)" readonly>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="Price">Price</label>
            <input type="number" class="form-control" id="Price" value="@Html.DisplayFor(model => model.Price)" readonly>
        </div>
        <div class="form-group col-md-4">
            <label for="Rate">Installment Rate</label>
            <input type="number" class="form-control" id="Rate" value="@Html.DisplayFor(model => model.InstallmentRate)" readonly>
        </div>
        <div class="form-group col-md-4">
            <label for="inputEmail4">Status</label>
            <input type="text" class="form-control" id="inputStatus" value="@Html.DisplayFor(model => model.PropertyStatu.PropertyStatusName)" readonly>
        </div>
    </div>
    <div class="form-group">
        <div class="col_01 col_len">
            <label for="Description">Description</label>
            <input type="text" class="form-control" id="inputStatus" value="@Html.DisplayFor(model => model.Description)" readonly>
        </div>
    </div>
    <div class="form-group">
        <div class="col_01 ">
            <label class="text_label_01 mt_01">Avatar Property</label>

            <div class="image_aria " id="image_aria">
                <img src="@Url.Content(Model.Avatar)" alt="Image" style="height:200px;width:200px;" />

            </div>
        </div>
        <p></p>
        <p>
        </p>
        @Html.ActionLink("Back", "Index")
    </div>

</form>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

