@{
    ViewBag.Title = "    Property";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model PPCWebs.Models.Property


<form style="padding: 0 200px; padding-bottom: 100px;">
    <h2 style="padding-bottom: 20px;">Detail Property</h2>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Name">Name</label>
            <input type="text" class="form-control" id="Name" value="Khách Sạn YSK">
        </div>
        <div class="form-group col-md-6">
            <label for="inputEmail4">Property Type</label>
            @Html.DisplayFor(model => model.PropertyName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputAddress">Address</label>
            @Html.DisplayFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-md-6">
            <label for="inputEmail4">District</label>
            @Html.DisplayFor(model => model.District, new { htmlAttributes = new { @class = "form-control" } })

        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="Area">Area</label>
            @Html.DisplayFor(model => model.Area, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-md-4">
            <label for="Bed">Bed Room</label>
            @Html.DisplayFor(model => model.BedRoom, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-md-4">
            <label for="Bath">Bath Room</label>
            @Html.DisplayFor(model => model.BathRoom, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="Price">Price</label>
            @Html.DisplayFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-md-4">
            <label for="Rate">Installment Rate</label>
            @Html.DisplayFor(model => model.InstallmentRate, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-md-4">
            <label for="inputEmail4">Status</label>
            @Html.DisplayFor(model => model.PropertyStatusID, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col_01 col_len">
            <label for="Description">Mô tả</label>
            @Html.DisplayFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col_01 ">
            <label class="text_label_01 mt_01">Avatar Property</label>

            <div class="image_aria " id="image_aria">
                <img src="@Url.Content(Model.Avatar)" alt="Image" style="height:250px;width:200px;" />

            </div>
        </div>
        <button type="Update" class="btn btn-primary">Update</button>

    </div>

</form>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

